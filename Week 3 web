/*CSS FILE*/

/* Styling an image */
.styled-image {
    width: 300px;
    height: auto;
    border: 5px solid black;
    margin: 20px;
    padding: 10px;
}

/* Styling text with an ID */
#description {
    color: darkgray;
    font-size: 18px;
    font-family: Arial, sans-serif;
    padding: 10px;
}

/* Styling headings with a class */
.title {
    font-size: 28px;
    font-family: 'Georgia', serif;
    color: blue;
    text-align: center;
    margin: 20px;
}
